#include <stdint.h>

// Pixel maps
const uint8_t A [] = {
    0b0010000,
    0b0101000,
    0b1000100,
    0b1111100,
    0b1000100,
    0b1000100,
    0b1000100
};

const uint8_t B [] = {
    0b1111000,
    0b1000100,
    0b1000100,
    0b1111000,
    0b1000100,
    0b1000100,
    0b1111000
};

const uint8_t C [] = {
    0b0111100,
    0b1000000,
    0b1000000,
    0b1000000,
    0b1000000,
    0b1000000,
    0b0111100
};

typedef struct _Font
{
	uint8_t        w;    // width
	uint8_t        h;    // height
	const uint8_t* pmap; // pixel map
} Font;
